          android:padding="10dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/A2"
          android:textSize="20dp"
          android:textColor="#000000"
          android:padding="10dp"/>

      <TextView
          android:id="@+id/A3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:textColor="#000000"
